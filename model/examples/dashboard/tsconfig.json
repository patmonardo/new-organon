{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@schema/*": [
        "app/data/schema/*"
      ],
      "@data/*": [
        "./app/data/*"
      ],
      "@graphics/*": [
        "./app/graphics/*"
      ],
      "@controller": [
        "./app/controller/index"
      ],
      "@controller/*": [
        "./app/controller/*"
      ],
      "@model": [
        "./app/model/index"
      ],
      "@model/*": [
        "./app/model/*"
      ],
      "@view": [
        "./app/view/index"
      ],
      "@view/*": [
        "./app/view/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
