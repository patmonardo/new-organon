{
  "extends": "../tsconfig.src.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@model/*": [
        "src/*"
      ],
      "@examples/*": [
        "examples/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "test/link.test.ts",
    "test/list.test.ts",
    "test/chart.test.ts"
  ]
}
