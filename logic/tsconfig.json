{
  "extends": "../tsconfig.src.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@repository": [
        "src/repository/index"
      ],
      "@repository/*": [
        "src/repository/*"
      ],
      "@schema": [
        "src/schema/index"
      ],
      "@schema/*": [
        "src/schema/*"
      ],
      "@absolute": [
        "src/absolute/index"
      ],
      "@absolute/*": [
        "src/absolute/*"
      ],
      "@relative": [
        "src/relative/index"
      ],
      "@relative/*": [
        "src/relative/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/relative/form/morph/form/**/*.ts",
    "src/relative/form/morph/cypher/**/*.ts",
    "src/relative/form/morph/graph/**/*.ts",
    "src/repository/**/*.ts",
    "src/absolute/**/*.ts"
  ]
}
